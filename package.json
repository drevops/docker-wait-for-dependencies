{
  "name": "@drevops/docker-wait-for-dependencies",
  "version": "1.0.0",
  "scripts": {
    "lint": "shellcheck entrypoint.sh tests/*.bats tests/*.bash && shfmt -i 2 -ci -s -d entrypoint.sh tests/*.bats tests/*.bash && docker run --rm -i hadolint/hadolint < Dockerfile",
    "lint-fix": "shfmt -i 2 -ci -s -w entrypoint.sh tests/_loader.bash",
    "test-coverage": "kcov --include-pattern=.sh,.bash --bash-parse-files-in-dir=. --exclude-pattern=vendor,node_modules,.coverage-html,tests .coverage-html bats tests/unit.bats",
    "test-unit": "bats --tap --verbose-run tests/unit.bats",
    "test-functional": "bats --verbose-run -t tests/functional.bats"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drevops/docker-wait-for-dependencies.git"
  },
  "devDependencies": {
    "bats-helpers": "npm:@drevops/bats-helpers@^1.5.1"
  }
}
